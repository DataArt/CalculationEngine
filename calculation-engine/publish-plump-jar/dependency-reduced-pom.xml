<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.dataart</groupId>
  <artifactId>spreadsheetanalytics-full</artifactId>
  <name>spreadsheetanalytics-full</name>
  <version>0.7.0.2.dev</version>
  <url>https://github.com/DataArt/CalculationEngine</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactSet>
            <includes>
              <include>org.apache.poi:poi-fork*</include>
              <include>org.apache.poi:poi-ooxml-fork*</include>
              <include>com.dataart:spreadsheetanalytics-*</include>
              <include>org.apache.xmlbeans:xmlbeans*</include>
              <include>org.apache.poi:ooxml-schemas*</include>
            </includes>
          </artifactSet>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <spreadsheetanalytics-version>0.7.0.2.dev</spreadsheetanalytics-version>
    <apache.poi.fork.version>3.13-beta1.ce.0.7.0.2.dev</apache.poi.fork.version>
  </properties>
</project>

